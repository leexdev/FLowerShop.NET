@model List<FlowerShop.Context.ORDER>

@{
    ViewBag.Title = "Lịch sử đơn hàng";
}

<div class="container">
    <div class="row mt-3">
        @if (Model != null && Model.Count > 0)
        {
            <div class="col-md-9">
                <h5 class="fw-bold">Lịch sử đơn hàng</h5>
                <hr class="my-2">
                <div class="overflow-auto">
                    <table class="table table-bordered table-hover text-center">
                        <thead>
                            <tr>
                                <td>Khách hàng</td>
                                <td>Số lượng</td>
                                <td>Trạng thái</td>
                                <td>Tổng cộng</td>
                                <td>Ngày thêm</td>
                                <td></td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                <tr>
                                    <td>@item.SENDER_NAME</td>
                                    <td>@item.ORDERDETAILS.Sum(o => o.QUANTITY)</td>
                                    <td>
                                        @{
                                            var latestOrderHistory = item.ORDERHISTORies.OrderByDescending(oh => oh.CHANGE_DATE).FirstOrDefault();
                                            if (latestOrderHistory != null)
                                            {
                                                <span>@latestOrderHistory.STATUS</span>
                                            }
                                        }
                                    </td>
                                    <td>@item.TOTAL_AMOUNT</td>
                                    <td>@item.ORDER_DATE</td>
                                    <td>
                                        <a class="p-2 bg-pink rounded-2" href="@Url.Action("OrderDetail", "Account", new {@orderId = item.ORDER_ID})" title="Chi tiết đơn hàng">
                                            <i class="fa-solid fa-circle-info text-white"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="row">
                    <div class="col-sm-6"></div>
                    <div class="col-sm-6 text-end">
                        Hiển thị từ 1 đến 1 / 1 (1 Trang)
                    </div>
                </div>
                <div class="button-select mt-2">
                    <a class="text-white bg-pink px-3 py-2 rounded-3 float-end" href="@Url.Action("Account", "Account")">Tiếp tục</a>
                </div>
            </div>
        }
        else
        {
            <p>Bạn chưa thực hiện bất kỳ đơn đặt hàng nào trước đó!</p>
        }

        <div class="col-md-3 d-none d-md-block">
            <div class="list-group mb-3">
                <a href="!#" class="list-group-item">Tài khoản của tôi</a>
                <a href="" class="list-group-item">Chỉnh sửa tài khoản</a>
                <a href="" class="list-group-item">Mật khẩu</a>
                <a href="" class="list-group-item">Lịch sử đơn hàng</a>
                <a href="" class="list-group-item">Đăng xuất</a>
            </div>
        </div>
    </div>
</div>