@model FlowerShop.Context.USER

@{
    ViewBag.Title = "Đăng ký tài khoản";
}

<div class="container">
    <div class="row mt-3">
        <div class="col-md-9">
            <h4 class="fw-bold">Đăng ký tài khoản</h4>
            <span>Nếu bạn đã có tài khoản với chúng tôi, vui lòng đăng nhập tại <a class="text-danger" href="@Url.Action("Login", "Account")">trang đăng nhập </a> .</span>
            <h5 class="mt-3">Thông tin cá nhân của bạn</h5>
            <hr class="mt-0 mb-3">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
            {
                <div class="mb-3">
                    @Html.LabelFor(model => model.USER_NAME, new { @class = "form-label fw-bold text-secondary" })
                    @Html.TextBoxFor(model => model.USER_NAME, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.USER_NAME, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.USER_EMAIL, new { @class = "form-label fw-bold text-secondary" })
                    @Html.TextBoxFor(model => model.USER_EMAIL, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.USER_EMAIL, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.USER_PASSWORD, new { @class = "form-label fw-bold text-secondary" })
                    @Html.PasswordFor(model => model.USER_PASSWORD, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.USER_PASSWORD, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.CONFIRM_PASSWORD, new { @class = "form-label fw-bold text-secondary" })
                    @Html.PasswordFor(model => model.CONFIRM_PASSWORD, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CONFIRM_PASSWORD, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn btn-danger text-white w-100 mb-3">Đăng ký</button>
            }

        </div>

        <div class="col-md-3 d-none d-md-block">
            <div class="list-group mb-3">
                <a href="./account.html"
                   class="list-group-item">Tài khoản của tôi</a>
                <a href="./edit-customer.html"
                   class="list-group-item">Chỉnh sửa tài khoản</a>
                <a href="./changepassword.html"
                   class="list-group-item">Mật khẩu</a>
                <a href="./"
                   class="list-group-item">Lịch sử đơn hàng</a>
                <a href="" class="list-group-item">Đăng xuất</a>
            </div>
        </div>
    </div>
</div>