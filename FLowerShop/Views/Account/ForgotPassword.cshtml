@model FlowerShop.Context.USER

@{
    ViewBag.Title = "Quên mật khẩu";
}

<div class="container">
    <div class="row mt-3">
        <div class="col-md-9">
            <h5 class="fw-bold">Quên mật khẩu?</h5>
            <span>Nhập địa chỉ e-mail được liên kết với tài khoản của bạn. Nhấp vào gửi để có một liên kết đặt lại mật khẩu được gửi qua email cho bạn.</span>
            <h6 class="mt-3">Địa chỉ Email của bạn</h6>
            <hr class="my-2">
            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new {@class ="form-customer ms-0 ms-md-5 mt-3"}))
            {
                <div class="form-group row align-items-center">
                    @Html.LabelFor(model => model.USER_EMAIL, new { @class = "fw-bold fs-6 form-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.USER_EMAIL, new { @class = "form-control", placeholder = "Địa chỉ Email", required = "required", type = "email" })
                        @Html.ValidationMessageFor(model => model.USER_EMAIL, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="button-select mt-4">
                    <button class="btn btn-danger text-white px-3 py-2 rounded-3 float-end">Tiếp tục</button>
                </div>
            }

        </div>

        @Html.Partial("_MenuAccount")
    </div>
</div>