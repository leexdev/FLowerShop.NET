@{
    ViewBag.Title = ViewBag.FlowerTypeName;
}

<div class="container mt-3">
    <h2 class="text-center">
        <span class="category-title d-inline-block border-bottom">Hoa khai trương</span>
    </h2>
    @if (Model != null && Model.Count > 0)
    {
        <div class="d-flex justify-content-end align-items-center mt-3">
            <span class="me-2">Sắp xếp theo</span>
            <div class="filter-flower">
                <select class="form-select" id="filterSelect">
                    <option value="0" selected>Mặc định</option>
                    <option value="1">Tên (A - Z)</option>
                    <option value="2">Tên (Z - A)</option>
                    <option value="3">Giá (Thấp > Cao)</option>
                    <option value="4">Giá (Cao > Thấp)</option>
                </select>
            </div>
        </div>
        <div class="product-list mt-3">
            <div id="flowerTypes">
                @Html.Partial("_FlowerType")
            </div>
        </div>
    <nav class="d-flex justify-content-center">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
    }
    else
    {
        <p class="mt-3">Không có sản phẩm nào trong danh mục này.</p>
    }
</div>