@{
    ViewBag.Title = "Thanh toán thành công";
}

<div class="container text-center my-4" style="min-height: 500px;">
    <h3 class="text-success">Thanh toán thành công</h3>
    <div class="spinner-grow text-success my-3" role="status">
        <span class="visually-hidden">Loading</span>
    </div>
    <p>Quý khách có thể kiểm tra chi tiết đơn hàng tại địa chỉ email: @ViewBag.EmailCustomer</p>

    <a href="@Url.Action("Index", "Home")" class="bg-pink px-3 py-2 rounded-2 text-white">
        Tiếp tục
    </a>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        fetch('/Checkout/ExitCheckout', {
            method: 'POST',
            credentials: 'same-origin'
        });
    });
</script>