@model FLowerShop.Models.OrderModel

@{
    var totalPrice = 30000;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Xác nhận đơn hàng</title>
</head>
<body>
    <div class="container mt-3 mt-md-5">
        <p>Xin chào @Model.Order.SENDER_NAME</p>
        <p>Cảm ơn anh/chị đã đặt hàng tại <strong>Bloom Shop</strong></p>
        <p>Đơn hàng của Anh/chị đã được tiếp nhận, chúng tôi sẽ nhanh chóng liên hệ với Anh/chị.</p>
        <h2>Thông tin đơn hàng</h2>
        <div>
            <h3><strong>Thông tin người gửi:</strong></h3>
            <p><strong>Tên:</strong> @Model.Order.SENDER_NAME</p>
            <p><strong>Số điện thoại:</strong> @Model.Order.SENDER_PHONE</p>
            <p><strong>Email:</strong> @Model.Order.SENDER_EMAIL</p>
        </div>

        <div>
            <h3><strong>Thông tin người nhận:</strong></h3>
            <p><strong>Tên:</strong> @Model.Order.RECIPIENT_NAME</p>
            <p><strong>Số điện thoại:</strong> @Model.Order.RECIPIENT_PHONE</p>
            <p><strong>Địa chỉ:</strong> @Model.Order.RECIPIENT_ADDRESS</p>
        </div>
        <p><strong>Lời nhắn cho người nhận:</strong> @Model.Order.MESSAGE_TO_RECIPIENT</p>
        <p><strong>Lời nhắn cho shop:</strong> @Model.Order.MESSAGE_TO_SHOP</p>
        <p><strong>Ẩn thông tin người gửi:</strong> @(Model.Order.HIDE_SENDER_INFO == true ? "Có" : "Không")</p>

        <h2>Chi tiết đơn hàng</h2>
        <table border="1">
            <thead>
                <tr>
                    <th>Hình ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th>Tổng cộng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Order.ORDERDETAILS)
                {
                    <tr>
                        <td>
                            <img src="~/Content/assets/img/@item.FLOWER.FLOWER_IMAGE" alt="@item.FLOWER.FLOWER_IMAGE" width="50" height="50">
                        </td>
                        <td>@item.QUANTITY x @item.FLOWER.FLOWER_NAME</td>
                        <td>@item.SUBTOTAL.Value.ToString("N0")VNĐ</td>
                        @{
                            totalPrice += (int)item.SUBTOTAL;
                        }
                    </tr>
                }
                <tr>
                    <td colspan="2" style="text-align: right;"><strong>Phí vận chuyển</strong></td>
                    <td>30,000VNĐ</td>
                </tr>
                @if (Model.Order.DISCOUNT_ID != null)
                {
                    <tr>
                        <td colspan="2" style="text-align: right;"><strong>Giảm giá</strong></td>
                        <td>-@((totalPrice - Model.Order.TOTAL_AMOUNT).Value.ToString("N0"))VNĐ</td>
                    </tr>
                }
                <tr>
                    <td colspan="2" style="text-align: right;"><strong>Tổng cộng</strong></td>
                    <td>@Model.Order.TOTAL_AMOUNT.Value.ToString("N0")VNĐ</td>
                </tr>
            </tbody>
        </table>

        <div>
            @if (Model.Order.PAYMENT_METHOD == true)
            {
                <strong>Phương thức thanh toán:</strong> <p>Ví điện tử(Momo)</p>
            }
            else
            {
                <strong>Phương thức thanh toán:</strong> <p>Thanh toán khi giao hàng(COD)</p>
            }
        </div>

        <h2>Lịch sử đơn hàng</h2>
        <table border="1">
            <thead>
                <tr>
                    <td>Ngày thêm</td>
                    <td>Trạng thái</td>
                    <td>Nội dung</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderHistories)
                {
                    <tr>
                        <td>@item.CHANGE_DATE</td>
                        <td>@item.STATUS</td>
                        <td>@item.CONTENT</td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</body>
</html>
