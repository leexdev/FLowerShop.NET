@model List<FlowerShop.Context.FLOWER>

@{
    ViewBag.Title = "Trang Admin";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    @*@section styles
    {
        <link rel="shortcut icon" type="image/x-icon" href="~/Content/admin/assets/img/favicon.jpg" />

        <link rel="stylesheet" href="~/Content/admin/assets/css/bootstrap.min.css" />

        <link rel="stylesheet" href="~/Content/admin/assets/css/dataTables.bootstrap4.min.css" />

        <link rel="stylesheet" href="~/Content/admin/assets/plugins/fontawesome/css/fontawesome.min.css" />

        <link rel="stylesheet" href="~/Content/admin/assets/plugins/fontawesome/css/all.min.css" />

        <link rel="stylesheet" href="~/Content/admin/assets/css/style.css" />
    }*@
}

<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="dash-widget dash1">
                    <div class="dash-widgetimg">
                        <span><img src="~/Content/admin/assets/img/icons/dash2.svg" alt="img" /></span>
                    </div>
                    <div class="dash-widgetcontent">
                        <h5>
                            <span class="counters">@(ViewBag.TotalAmount)VNĐ</span>
                        </h5>
                        <h6>Tổng doanh thu</h6>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12 d-flex">
                <div class="dash-count">
                    <div class="dash-counts">
                        <h4>@ViewBag.CountCustomer</h4>
                        <h5>Khách hàng</h5>
                    </div>
                    <div class="dash-imgs">
                        <i data-feather="user"></i>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-sm-6 col-12 d-flex">
                <div class="dash-count das2">
                    <div class="dash-counts">
                        <h4>@ViewBag.CountFlower</h4>
                        <h5>Sản phẩm</h5>
                    </div>
                    <div class="dash-imgs">
                        <i data-feather="file-text"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12 d-flex">
                <div class="dash-count das3">
                    <div class="dash-counts">
                        <h4>@ViewBag.CountOrder</h4>
                        <h5>Hóa đơn bán hàng</h5>
                    </div>
                    <div class="dash-imgs">
                        <i data-feather="file"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-7 col-sm-12 col-12 d-flex">
                <div class="card flex-fill">
                    <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                        <div class="graph-sets">
                            <div class="dropdown">
                                <button class="btn btn-white btn-sm dropdown-toggle" type="button"
                                        id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    2022
                                    <img src="~/Content/admin/assets/img/icons/dropdown.svg" alt="img" class="ms-2" />
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <li>
                                        <a href="javascript:void(0);" class="dropdown-item">2022</a>
                                    </li>
                                    <li>
                                        <a href="javascript:void(0);" class="dropdown-item">2021</a>
                                    </li>
                                    <li>
                                        <a href="javascript:void(0);" class="dropdown-item">2020</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div id="s-line" class="chart-set"></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 col-sm-12 col-12 d-flex">
                <div class="card flex-fill">
                    <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                        <h4 class="card-title mb-0">Sản phẩm bán chạy</h4>
                        <div class="dropdown">
                            <a href="javascript:void(0);" data-bs-toggle="dropdown" aria-expanded="false"
                               class="dropset">
                                <i class="fa fa-ellipsis-v"></i>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <li>
                                    <a href="productlist.html" class="dropdown-item">Danh sách sản phẩm</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive dataview">
                            <table class="table datatable">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Tên</th>
                                        <th>Giá</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Count > 0)
                                    {
                                        int index = 1;

                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@index</td>
                                                <td class="productimgname">
                                                    <a href="@Url.Action("Detail", "Flowers", new {flowerId = item.FLOWER_ID})" class="product-img">
                                                        <img src="~/Content/assets/img/product/@item.FLOWER_IMAGE" alt="@item.FLOWER_IMAGE" />
                                                    </a>
                                                    <a href="#">@item.FLOWER_NAME</a>
                                                </td>
                                                <td>@item.NEW_PRICE.Value.ToString("N0")VNĐ</td>
                                            </tr>
                                            index++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

